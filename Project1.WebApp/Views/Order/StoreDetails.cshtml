@model Project1.WebApp.ViewModels.OrderViewModel

    <div>
        <h4>Store Order Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.OrderId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.OrderId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.OrderDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.OrderDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StoreId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StoreId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CustomerId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CustomerId)
            </dd>
        </dl>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Product Id
                    </th>
                    <th>
                        Product Description
                    </th>
                    <th>
                        Product Quantity
                    </th>
                    <th>
                        Product Price
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Orders.Keys)
                {
                    <tr>
                        <td>
                            @item.ProductId
                        </td>
                        <td>
                            @item.ProdDescription
                        </td>
                        <td>
                            @Model.Orders[item]
                        </td>
                        <td>
                            @item.ProdPrice
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
<div>
    <a asp-action="Index">Back to Orders Menu</a>
</div>
